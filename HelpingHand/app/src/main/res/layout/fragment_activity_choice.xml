<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wenzhao.helpinghand.ble.pro.Fragment.ActivityChoiceFragment"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helping"
        android:textSize="38dp"
        android:id="@+id/textView10"
        android:layout_marginTop="21dp"
        android:layout_marginStart="39dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand"
        android:textSize="38dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Child:"
        android:textSize="22dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:textColor="#f75681" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose activity:"
        android:textSize="22dp"
        android:textColor="#f75681"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginBottom="100dp"
        android:id="@+id/myRadioGroup"
        android:layout_alignEnd="@+id/textView16">

        <RadioButton
            android:id="@+id/radioGroupButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Block tower" />

        <RadioButton
            android:id="@+id/radioGroupButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coin sorting" />

        <RadioButton
            android:id="@+id/radioGroupButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playdough fun" />

        <RadioButton
            android:id="@+id/radioGroupButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Necklace making"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioGroupButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pantomime (on-screen)" />

    </RadioGroup>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/btn_next_choice"
        android:layout_marginBottom="35dp"
        android:textSize="20dp"
        android:textColor="#f75681"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
