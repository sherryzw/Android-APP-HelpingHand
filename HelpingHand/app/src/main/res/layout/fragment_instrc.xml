<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helping"
        android:textSize="38dp"
        android:id="@+id/textView"
        android:layout_marginTop="28dp"
        android:layout_marginStart="22dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand"
        android:textSize="38dp"
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What&apos;s needed to start?"
        android:textSize="26dp"
        android:id="@+id/textView2"

        android:textColor="#f75681"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤ Two wrist-bands(T1 sensor tags)"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView"
        android:textIsSelectable="false" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❤ At least 1 off-screen tabletop game"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="15dp"
        android:textColor="#000000"/>

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="15dp"
        android:text="❤ Some voluntary arm movements for play"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Ready to begin"
        android:textSize="20dp"
        android:id="@+id/btn_begin"
        android:layout_marginBottom="44dp"
        android:textColor="#f75681"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
