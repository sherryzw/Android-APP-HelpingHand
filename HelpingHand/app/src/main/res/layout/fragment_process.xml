<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/ratio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Done"
        android:textColor="#f75681"
        android:background="@drawable/shape"
        android:id="@+id/btn_finish"
        android:textSize="18dp"
        android:layout_below="@+id/linear"
        android:layout_alignEnd="@+id/linear"
        android:layout_marginTop="53dp" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="20dp"
        android:textColor="#f75681"
        android:id="@+id/textView18"
        android:layout_below="@+id/ratio1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/activity_image" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textColor="#f75681"
        android:background="@drawable/shape"
        android:id="@+id/btn_next"
        android:textSize="18dp"
        android:layout_alignTop="@+id/btn_finish"
        android:layout_alignStart="@+id/linear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:textColor="#f75681"
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />


</RelativeLayout>
