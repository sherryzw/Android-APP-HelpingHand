<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/ratio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#2e50e9"
        android:gravity="center"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Done"
        android:textColor="#ca5948"
        android:background="@drawable/shape"
        android:id="@+id/btn_finish"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/linear"
        android:textSize="18dp" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="20dp"
        android:visibility="invisible"
        android:textColor="#42ecf5"
        android:id="@+id/textView18"
        android:layout_below="@+id/ratio1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_image" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textColor="#ca5948"
        android:background="@drawable/shape"
        android:id="@+id/btn_next"
        android:layout_alignTop="@+id/btn_finish"
        android:layout_alignStart="@+id/linear"
        android:textSize="18dp" />


</RelativeLayout>
