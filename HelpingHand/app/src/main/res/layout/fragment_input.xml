<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wenzhao.helpinghand.ble.pro.Fragment.InputFragment"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helping"
        android:textSize="38dp"
        android:id="@+id/textView2"
        android:layout_marginTop="28dp"
        android:layout_marginStart="22dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand"
        android:textSize="38dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information For Child :"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginTop="23dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname:"
        android:id="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#ca5948"
        android:textSize="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:background="@drawable/shapeforedittext"
        android:layout_alignEnd="@+id/btn_next_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weak arm:"
        android:id="@+id/textView8"
        android:textColor="#ca5948"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editText" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/checkBox"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:checked="false"
        android:textColor="#ffffff" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toEndOf="@+id/textView8"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Able to read:"
        android:id="@+id/textView9"
        android:textColor="#ca5948"
        android:textSize="18dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_toEndOf="@+id/textView8" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textSize="20dp"
        android:id="@+id/btn_next_input"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/checkBox4"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@drawable/shape"/>

</RelativeLayout>
