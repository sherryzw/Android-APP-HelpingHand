<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wenzhao.helpinghand.ble.pro.Fragment.InputFragment"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helping"
        android:textSize="38dp"
        android:id="@+id/textView2"
        android:layout_marginTop="28dp"
        android:layout_marginStart="22dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hand"
        android:textSize="38dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information For Child :"
        android:textSize="23dp"
        android:id="@+id/textView6"
        android:layout_marginTop="23dp"
        android:textColor="#f75681"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView7" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname:"
        android:id="@+id/textView7"
        android:layout_marginTop="32dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/editText"
        android:text="Jaclyn"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:background="@drawable/shapeforedittext"
        android:layout_alignEnd="@+id/btn_next_input" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dominant arm:"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/checkBoxLeft"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:checked="false"
        android:textColor="#f75681"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/checkBoxRight"
        android:checked="false"
        android:layout_alignTop="@+id/checkBoxLeft"
        android:layout_toEndOf="@+id/textView8"
        android:textColor="#f75681"
        android:textSize="20dp" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Able to read:"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/checkBoxLeft"
        android:layout_alignStart="@+id/checkBoxLeft" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/checkBoxYes"
        android:checked="false"
        android:textColor="#f75681"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textSize="20dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/checkBoxNo"
        android:checked="false"
        android:textColor="#f75681"
        android:layout_alignTop="@+id/checkBoxYes"
        android:layout_toEndOf="@+id/textView8"
        android:textSize="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textSize="20dp"
        android:id="@+id/btn_next_input"
        android:textColor="#f75681"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

</RelativeLayout>
