<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:clickable="false"
    android:gravity="bottom"
    android:longClickable="false"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/device_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.43"
        android:choiceMode="singleChoice"
        android:padding="3dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/showimg"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/btn_start"
        android:layout_alignStart="@+id/showimg" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView1"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/showimg" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Start"
        android:textColor="#f75681"
        android:textSize="20dp"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    <com.example.wenzhao.helpinghand.ble.pro.Utils.CustomFontTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please first turn on \n left hand sensor."
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#f75681"
        android:layout_centerVertical="true"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/device_list"
        android:layout_above="@+id/showimg"
        android:layout_toEndOf="@+id/device_list"
        android:layout_alignParentStart="true" />
</RelativeLayout>